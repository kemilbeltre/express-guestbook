<%- include('partials/header') %>

<% if (entries.length) { %>
    <% entries.forEach(function (entry) { %>
        <div class="col-md-4 offset-md-4">
            <div class="card my-2">
                <div class="card-header bg-primary text-white">
                    <p> <%= entry.published%> </p>
                </div>
                <div class="card-body">
                    <h1> <%= entry.title %> </h1>
                    <p> <%= entry.content %> </p>
                </div>
            </div>           
        </div>
   <% }) %>
<% } else { %>
    <p>No entries! <a href="/new-entry">Add one!</a></p>
    <% } %>


<%- include('partials/footer') %>
